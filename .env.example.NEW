# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./akgroup.db

# For MySQL/MariaDB (production)
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/akgroup

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=True

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:8000"]

# Security (futuro - autenticación JWT)
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# API Connection
FRONTEND_API_URL=http://127.0.0.1:8000
FRONTEND_API_TIMEOUT=30

# Application Settings
APP_TITLE=AK Group - Sistema de Gestión
APP_WIDTH=1280
APP_HEIGHT=800

# UI Theme (light, dark, auto)
UI_THEME=light
PRIMARY_COLOR=#2196F3

# Frontend Logging
FRONTEND_LOG_LEVEL=INFO
FRONTEND_LOG_FILE=logs/frontend.log

# ============================================================================
# SHARED CONFIGURATION
# ============================================================================

# Timezone
TIMEZONE=America/Santiago

# Date Format
DATE_FORMAT=DD/MM/YYYY
DATETIME_FORMAT=DD/MM/YYYY HH:mm:ss

# ============================================================================
# NOTES
# ============================================================================

# 1. Copiar este archivo como .env y configurar valores reales
# 2. NUNCA commitear el archivo .env al repositorio
# 3. Cambiar SECRET_KEY en producción
# 4. Usar DATABASE_TYPE=mysql en producción
# 5. API_RELOAD=False en producción
